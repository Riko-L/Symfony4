{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}


    <div class="container">


        <div class="panel panel-info">

            <div class="panel-body">
                <div class="row">

                    <div class=" col-sm-6 offset-sm-3">

                        <h1>Bonjour {{ person.firstName }} {{ person.lastName }} </h1>

                        <h3> Voici les informations de votre compte</h3>
                        <table class="table table-user-information">
                            <thead>

                            </thead>
                            <tbody>
                            <tr>
                                <td>Prénom:</td>
                                <td>{{ person.firstName }}</td>
                            </tr>
                            <tr>
                                <td>Nom:</td>
                                <td>{{ person.lastName }}</td>
                            </tr>
                            <tr>
                                <td>Nom d'utilisateur</td>
                                <td>{{ person.username }}</td>
                            </tr>

                            <tr>
                                <td>Téléphone</td>
                                <td>{{ person.phoneNumber}}</td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>{{ person.email }}</td>
                            </tr>

                            </tbody>
                        </table>

                        <div class="d-flex justify-content-between">

                            <a href="{{ path('account_edit') }}" class="btn btn-primary">Mettre à jour mes inforamtions</a>

                            {{ include('account/_delete_form.html.twig') }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}