{% extends 'base.html.twig' %}

{% block title %}Resultat de la recherche{% endblock %}

{% block body %}



    {#<nav class="navbar navbar-light bg-light">#}
        {#<h1>Recherche</h1>#}
        {#{{  form_start(formSearch  ,{ 'attr': {'class': 'form-inline'} , 'action': path('search'), 'method': 'GET'}) }}#}
        {#{{ form_row(formSearch.search ,{'label' : "Mot clé" , 'attr': {'class': 'mr-4'}}) }}#}
        {#{{ form_row(formSearch.region ,{'attr': {'class': 'mr-4'}}) }}#}
        {#{{ form_row(formSearch.category ,{'attr': {'class': 'mr-4'}}) }}#}
        {#<button class="btn btn-primary">{{ button_label|default('Rechercher') }}</button>#}

        {#{{  form_end(formSearch) }}#}

    {#</nav>#}

    <div class="container">



        <div class="row">
            <div class="col">
                <h1>Recherche</h1>

                <h2>Resultat</h2>


                <table class="table">
                    <thead>
                    <tr>
                        <td>Image</td>
                        <td>Titre</td>
                        <td>Date</td>
                        <td>Nom d'utilisateur</td>
                        <td>Région</td>
                        <td>Catégorie</td>

                    </tr>
                    </thead>
                    <tbody>
                    {% for ad in ads %}

                            <tr class='clickable-row' data-href="{{ path('ads_show' , { 'ad' : ad.id}) }}">
                                <td><img class="img-fluid img-thumbnail" width="200" src="{{ path('photo_show_one' , { 'ad' : ad.id })}}" alt="img_annonce"></td>
                                <td>{{ ad.title }}</td>
                                <td>{{ ad.creationDate|date("d/m/Y")  }}</td>
                                <td>{{ ad.author.username }}</td>
                                <td>{{ ad.region.name }}</td>
                                <td>{{ ad.category.name}}</td>
                            </tr>

                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <td><a href="{{ path('ads') }}" class="btn btn-primary">Retour à la liste d'annonces</a></td>
                    </tr>

                    </tfoot>
                </table>

                {% if ads == null %}
                <h3>Aucun résultat</h3>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
